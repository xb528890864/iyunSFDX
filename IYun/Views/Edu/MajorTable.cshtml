@using System.Configuration
@using IYun.Common
@using Webdiyer.WebControls.Mvc
@using IYun.Models;
@model PagedList<VW_Major>

<table class="xx-table ydong-tab">
    <tr>
        <th>年度</th>
        <th>专业名称</th>
        <th>层次</th>
        <th>学习形式</th>
        <th>专业代码</th>
        <th>教学计划</th>
    </tr>
    @{
        foreach (var ydSysAdmin in Model)
        {
            <tr>
                <td>@ViewData["year"]</td>
                <td>@ydSysAdmin.majorLibraryName</td>
                <td>@ydSysAdmin.eduTypeName</td>
                <td>@ydSysAdmin.stuTypeName</td>
                <td>@ydSysAdmin.majorLibraryCode</td>
    @if (ConfigurationManager.AppSettings["SchoolName"].ToString() == ComEnum.SchoolName.JXSFDX.ToString()|| ConfigurationManager.AppSettings["SchoolName"].ToString() == ComEnum.SchoolName.JXLG.ToString() || ConfigurationManager.AppSettings["SchoolName"].ToString() == ComEnum.SchoolName.JXKJSFDX.ToString())
    {
        <td><a class="bfont2" href="/edu/MajorTeachPlan/?year=@ViewData["year"]&majorId=@ydSysAdmin.id">查看教学计划</a></td>
    }
    else
    {
         <td><a class="bfont2" href="/edu/TeachPlan/?year=@ViewData["year"]&majorId=@ydSysAdmin.id">查看教学计划</a></td>
    }
            </tr>
        }
    }
</table>

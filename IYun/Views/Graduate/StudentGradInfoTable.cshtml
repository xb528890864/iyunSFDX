    //全部选中本站点所有学生
    function checkboxAll(checkbox) {
        if (checkbox.checked == true) {
            $('#ajaxtable').fadeOut('10');
            $('#loadingDiv').show();
            $.ajax({
                type: "POST",
                url: "/Graduate/AllStuGradCheck",
                data: form2Json("searchForm"),
                success: function (data) {
                    if (data == "ok") {
                        $("#searchForm").submit();
                    } else {
                        alert(data);
                    }
                    $('#ajaxtable').fadeIn('10');
                    $('#loadingDiv').hide();
                },
                error: function () {
                    $('#ajaxtable').fadeIn('10');
                    $('#loadingDiv').hide();
                    alert("未知错误！==");
                }
            });
        }
    }
    //全部取消选中的本站点所有学生
    function checkboxAllNO(checkbox) {
        if (checkbox.checked == true) {
            $('#ajaxtable').fadeOut('10');
            $('#loadingDiv').show();
            $.ajax({
                type: "POST",
                url: "/Graduate/AllStuGradCheckNo",

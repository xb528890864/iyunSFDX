@using IYun.Models
@model YT_ActivityVideo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>正在播放-@Model.y_name</title>
    <script src="https://cdn.bootcss.com/jquery/1.10.2/jquery.js"></script>
    <link rel="stylesheet" href="//g.alicdn.com/de/prismplayer/2.7.4/skins/default/aliplayer-min.css" />
    <script type="text/javascript" charset="utf-8" src="//g.alicdn.com/de/prismplayer/2.7.4/aliplayer-min.js"></script>
    <link href="https://cdn.bootcss.com/twitter-bootstrap/3.4.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.bootcss.com/twitter-bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.bootcss.com/lrsjng.jquery-qrcode/0.14.0/jquery-qrcode.min.js"></script>
</head>
<body>
    <div class="container-fluid" style="padding:0px;">
        <div class="row">
            <video style="object-fit: fill;" class="prism-player" id="player-con"></video>
            <script>
                let urlStr = `@Html.Raw(Model.y_url)`;
                let urlJson = JSON.parse(urlStr);
                if (urlJson.SD === '' || urlJson.SD === null) {
                    delete urlJson.SD;
                }
                if (urlJson.HD === '' || urlJson.HD === null) {
                    delete urlJson.HD;
                }
                var player = new Aliplayer({
                    "id": "player-con",
                    "source": JSON.stringify(urlJson),
                    "width": "100%",
                    "height": "53rem",
                    "autoplay": true,
                    "isLive": true,
                    "rePlay": false,
                    "playsinline": true,
                    "preload": true,
                    "controlBarVisibility": "hover",
                    "useH5Prism": true
                }, function (player) {
                    console.log("播放器创建了。");
                }
                );
            </script>
        </div>
        @*<div class="row">
            <div class="col-xs-12 col-md-12  btn btn-success"  onclick="$('#myModal').modal('show')">
                <h4>分享</h4>
            </div>
        </div>*@
    </div>
</body>
</html>

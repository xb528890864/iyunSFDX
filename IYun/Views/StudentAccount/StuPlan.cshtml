@using System.Configuration
@using IYun.Models
@using IYun.Object
@model List<IYun.Controllers.ControllerObject.CoursePlanDto>
@{
    Layout = null;

    var year = Convert.ToInt32(ViewData["year"]);

    var list = Model.GroupBy(u => new
    {
        u.y_year,
        u.majorName,
        u.stuTypeName,
        u.eduTypeName
    }).ToList();

}

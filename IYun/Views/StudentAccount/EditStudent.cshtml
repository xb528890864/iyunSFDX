            }
        }
        function checkData() {
            if ($('#y_name').val() == "") {
                $('#y_name').focus();
                alert('学生名字不能为空');
                return false;
            }
            if ($('#y_cardId').val() == "") {
                $('#y_cardId').focus();
                alert('身份证号不能为空');
                return false;
            }
            if ($('#y_birthday').val() == "") {
                $('#y_birthday').focus();
                alert('出生日期不能为空');
                return false;
            }else {
                var reg = /(^\d{4}-(0[1-9]|1[0-2])-(0[1-9]|1[0-9]|2[0-9]|3[0-1])$)/;
                if (reg.test($('#y_birthday').val().trim()) === false) {
                    alert("出生日期输入不合法");
                    return false;
                }
            }
            //if ($('#y_examNum').val() == "") {
            //    $('#y_examNum').focus();
            //    alert('考号不能为空');
            //    return false;
            //}
            if ($('#SubSchool').val() == 0) {
                $('#SubSchool').focus();
                alert('学习中心不能为空');
                return false;
            }
            if ($('#MajorLibrary').val() == 0) {
                $('#MajorLibrary').focus();
                alert('专业不能为空');
                return false;
            }
            if ($('#EduType').val() == 0) {
                $('#EduType').focus();
                alert('专业层次不能为空');
                return false;
            }
            if ($('#StuType').val() == 0) {
                $('#StuType').focus();
                alert('学习形式不能为空');
                return false;
            }
            if ($('#StuState').val() == 0) {
                $('#StuState').focus();
                alert('学籍状态不能为空');
                return false;
            }
            return true;
        }
    </script>

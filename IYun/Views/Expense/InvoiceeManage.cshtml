    function DownInvoiceeManage() {
        $.ajax({
            type: "post",
            url: "/Expense/DownloadInvoiceeManage",
            data: $("#searchForm").serialize(),
            success: function (data) {
                if (data.indexOf("xls") > 0) {
                    location.href = data;
                } else {
                    alert(data);
                }
            },
            error: function (msg) {
                alert("未知错误");
            }
        });
    }

    function yearchangeComple() {  //年度改变回调

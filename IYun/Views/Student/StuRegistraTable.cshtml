<script>
    //全选或取消全选功能
    $(function () {
        $(".mycb").click(function () {
            var bl = $(".mycb").length == $(".mycb:checked").length;
            $("#all").attr("checked", bl);
        });
        $(".zz8").click(function () {
            var checkedStatus = this.checked;
            var checkbox = $(this).parents('table').find('tr td input:checkbox');
            checkbox.each(function () {
                this.checked = checkedStatus;
            });
        });  
    });
   
    //注册待审批
    function registercheck() {
        var cbs = $(".mycb");
        if (cbs.length <= 0) {
            alert("请先选择学生");
            return;
        }
        var term = $("#term").val();
        if (term == "") {
            alert("未选择学年");
            return;
        }
        var ids = "";
        for (var i = 0; i < cbs.length; i++) {
            if (cbs[i].checked) {
                ids += $(cbs[i]).attr("data-id");
                if (i + 1 < cbs.length) {
                    ids += ",";
                }
            }
        }
        $.ajax({
            type: "post",
            url: "/Student/StuRegisterCheck",
            data: {
                ids: ids,
                term: term
            },
            success: function (data) {
                if (data == "ok") {
                    alert("注册审核成功");
                    location.reload(true);

                } else {
                    alert(data);
                }
            },
            error: function () {
                alert("未知错误");
            }
        });
    }
    function registerSub() {
        var cbs = $(".mycb");
        if (cbs.length <= 0) {
            alert("请先选择学生");
            return;
        }
        var subSchoolId = $("#subSchool").val();
        if (subSchoolId==0) {
            alert("请先选择要注册到的函授站");
            return;
        }
        var ids = "";
        for (var i = 0; i < cbs.length; i++) {
            if (cbs[i].checked) {
                ids += $(cbs[i]).attr("data-id");
                if (i + 1 < cbs.length) {
                    ids += ",";
                }
            }
        }
        $.ajax({
            type: "post",
            url: "/Student/StuRegisterSub",
            data: {
                ids: ids,
                subSchoolId: subSchoolId
            },
            success: function (data) {
                if (data == "ok") {
                    alert("注册成功");
                    $("#searchForm").submit();
                } else {
                    alert(data);
                }
            },
            error: function () {
                alert("未知错误");
            }
        });
    }
</script>
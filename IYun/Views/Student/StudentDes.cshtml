        //保存照片路径到数据库
        function saveimg() {
            var img = $('#imgtx')[0].src;
            var stuid = $('#stuid').eq(0).text();
             
            $.ajax({
                type: "post",
                url: "/Student/SaveStudentImg",
                data: {
                    img: img,
                    stuid: stuid
                },
                success: function (data) {
                    if (data == "ok") {
                        alert("保存成功");
                    }
                },
                error: function () {

                    alert("未知错误");
                }
            });
        }

        //将form转为AJAX提交
        function ajaxSubmit(frm, fn, dataType) {
            var dataPara = getFormJson(frm);
            $.ajax({
                url: frm.action,
                type: frm.method,
                data: dataPara,
                dataType: dataType,
                success: fn
            });
        }

        //将form中的值转换为键值对。
        function getFormJson(frm) {
            var o = {};
            var a = $(frm).serializeArray();
            $.each(a, function () {
                if (o[this.name] !== undefined) {
                    if (!o[this.name].push) {
                        o[this.name] = [o[this.name]];
                    }
                    o[this.name].push(this.value || '');
                } else {
                    o[this.name] = this.value || '';
                }
            });

            return o;
        }

        //重新绑定FORM提交事件
        $(document).ready(function () {
            $('#StuForm').bind('submit', function () {
                ajaxSubmit(this, SendSuccess, 'json');
                return false;

</html>
<script>
    function teachPlanDesDelete(id) {
        if (confirm("确认删除此课程信息？")) {
        $.ajax({
            type: "post",
            url: "/Edu/teachPlanDesDelete",
            data: {
                id: id
            },
            success: function (data) {
                if (data == "ok") {
                    location.reload();
                } else {
                    alert(data);
                }
            },
            error: function (msg) {
                alert("未知错误");
            }
        });
        }
        }
    function goback() {
        location.href = document.referrer;
    }
</script>
    //生成各个字段集合，其中用“<>”隔开
    function save() {
        var scoreList = $(".score");
        var term = "@term";
        var stuId = "@stuId";
        var normalScore = "";
        var termScore = "";
        var totalScore = "";
        var courseId = "";
        if (scoreList.length == 0) {
            alert("无成绩");
            return;
        }
        for (var i = 0; i < scoreList.length; i++) {
            var nowObj = $(scoreList[i]);
            normalScore += $(".normalScore", nowObj).val();
            termScore += $(".termScore", nowObj).val();
            totalScore += $(".totalScore", nowObj).val();
            courseId += $(".courseId", nowObj).val();
            if (i + 1 < scoreList.length) {
                normalScore += "<>";
                termScore += "<>";
                totalScore += "<>";
                courseId += "<>";
            }
        }
        $.ajax({
            type: "post",
            url: "/Score/UpdateStuScore",
            data: {
                stuId: stuId,
                term: term,
                normalScore: normalScore,
                termScore: termScore,
                totalScore: totalScore,
                courseId: courseId
            },
            success: function (data) {
                if (data == "ok") {
                    alert("成绩更新成功");
                } else {
                    alert(data);
                }
            },
            error: function (msg) {
                alert("未知错误");
            }
        });
    }


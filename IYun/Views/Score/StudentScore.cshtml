                    if (isTeach)
                    {
                        var teachPlanDesList = (List<VW_TeachPlanDes>)ViewBag.teachPlanDesList;
                        using (var yunEntities = new IYunEntities())
                        {
                            for (var i = 0; i < teachPlanDesList.Count; i++)
